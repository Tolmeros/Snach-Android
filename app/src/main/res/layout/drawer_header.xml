<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="136dp"
    android:background="@color/purewhite"
    android:id="@+id/rl_drawerheader_base">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="128dp"
        android:background="@color/main500"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_header_launcherIcon"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:text="@string/app_name"
            android:id="@+id/tv_appName_header"
            android:layout_marginLeft="16dp"
            android:textColor="@color/titlewhite"
            android:layout_toEndOf="@+id/iv_header_launcherIcon"
            android:layout_alignTop="@+id/iv_header_launcherIcon"
            android:layout_toRightOf="@+id/iv_header_launcherIcon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="V 0.0.1"
            android:id="@+id/tv_version_header"
            android:textColor="@color/titlewhite_alpha"
            android:layout_below="@+id/tv_appName_header"
            android:layout_alignLeft="@+id/tv_appName_header"
            android:layout_alignStart="@+id/tv_appName_header" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/titlewhite"
            android:text="Device Profile"
            android:layout_marginTop="16dp"
            android:id="@+id/tv_currentProfileName"
            android:layout_below="@+id/iv_header_launcherIcon"
            android:layout_alignStart="@+id/iv_header_launcherIcon" />


    </RelativeLayout>
</RelativeLayout>